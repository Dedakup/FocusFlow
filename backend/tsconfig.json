{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@handlers/*": ["handlers/*"],
            "@utils/*": ["utils/*"],
            "@models/*": ["layers/models/*"],
            "@schemas/*": ["layers/schemas/*"],
            "@services/*": ["services/*"],
            "@config/*": ["config/*"]
        },
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}
